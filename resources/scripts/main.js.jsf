	$(form).find("[name=parentAliasChain]").val(aliasChain);
	var btn;
	if (changed && open) {
		btn = $(form).find("#refreshbearb");
	} else {
		btn = $(form).find("#" + type + "bearb");
	}
	currentEditType = type;
	if ($(btn).length > 0) {
		$(btn).click();
	}
